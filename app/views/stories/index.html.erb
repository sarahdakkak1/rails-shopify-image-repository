  <h1>Image <span>Uploads</span></h1>

  <div class="container">

   <button type="button" class="btn btn-success"><%= link_to "Add a new picture", new_story_path %> </button>
<br>
<br>
    <div class="row">
      <% @stories.each do |story|%>
      <div class="col-12 col-md-6 col-lg-3">

      <div class="card-category"
      style="background-image: url('<%= cl_image_path story.photos[0].key, height: 200, width: 300, crop: :fill %>')">
      <%= link_to story.name.capitalize, story_path(story), class: "text-white text-decoration-none" %>
    </div>
    </div>

  <% end %>
  </div>

 <br>
</div>
